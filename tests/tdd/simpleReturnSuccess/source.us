
class Simple
    def value
        5
    end
    def identity(arg)
        arg
    end
end

spec Simple # class specification

    s = Simple.new
    
    spec value
        case "should return 5"
            s.value == 5
        end
    end
    spec identity
        case "should return its argument"
            s.identity(:dummy) == :dummy
        end
    end
end

